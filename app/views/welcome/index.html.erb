<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h2>Calule a distância aproximada entre dois endereços</h2>
			<div class="destinations-form">
				<%= form_tag("/index", method: "post", class: "form-horizontal") do %>
					<div class="col-lg-6">
						<div class="form-group">
							<%= label_tag(:origin, "Origem", class: "col-lg-2 control-label")%>
							<div class="col-lg-10">
								<%= text_field_tag :origin, @welcome[:origin], 
								    class: "form-control", placeholder: "Ex: Praça XV de Novembro - Rua Tenente Silveira - Centro, Florianópolis - SC"%>
							</div>
						</div>
						<div class="form-group">
							<%= label_tag :destination, "Destino", class: "col-lg-2 control-label" %>	
							<div class="col-lg-10">
								<%= text_field_tag :destination, @welcome[:destination], 
								    class: "form-control", placeholder: "Ex: Shopping Iguatemi, Florianópolis - Santa Monica, State of Santa Catarina" %>
							</div>
						</div>
						<div class="form-group">
							<div class="col-lg-4 col-lg-offset-2">
								<%= submit_tag("Calcular", class: "btn btn-primary") %> 
							</div>
						</div>

						<%= @welcome[:origin_geocode].inspect %>
						<%= @welcome[:destination_geocode].inspect %>
					</div>
				<% end %>
			</div>	
		</div>
	</div>
</div>